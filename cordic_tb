module cordic_tb;
   reg clk = 0;
   reg [15:0] x_in;
   reg [15:0] y_in;
   reg [31:0] angle;
   wire [15:0] x_out;
   wire [15:0] y_out;

   cordic uut(clk,x_in,y_in,angle,x_out,y_out);

   always #5 clk = ~clk;

   initial begin
      clk = 0;
      x_in = 0;
      y_in = 0;
      angle = 0;		
      #100;
      x_in = 32000;
      y_in = 32000;
      angle = 32'b00100000000000000000000000000000;
      
      clk = 1'b0;   
   end
endmodule
